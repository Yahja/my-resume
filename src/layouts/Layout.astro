---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: Menlo, Monaco, 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', 'Courier New', Courier, monospace;
		background-color: #fff;
		letter-spacing: -0.025rem;
	}
	body, figure {
		margin: 0;
		padding: 0;
	}
	a {
		text-decoration: none;
	}
	ul {
		margin: 0;
		padding: 0;
		list-style: none;
	}
	*, *::before, *::after {
		box-sizing: border-box;
	}
	h1, h2, h3, h4 {
		margin: 0;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}
	h1 {
		font-size: 1.8rem;
	}
	h2 {
		margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.75rem;
		font-size: 1.6rem;
	}
	p {
		color: #888;
		font-size: .875rem;
		line-height: 1.25rem;
		margin: 0;
		text-wrap: pretty;
		
	}

	html.dark {
		background-color: #0c0a2b;
		color: #fff;
	}

	html.dark p,
	html.dark span {
		color: #f2f2f2;
	}

	@media print {
		.no-print {
			display: none !important;
		}
		html.dark {
			color: #000;
		}

		html.dark p {
			color: #888;
		}
		html.darrk span {
			color: #666;
		}
		
	}

	.print {
		display: none !important;
	}

	@media print {
		.print {
			display: block !important;
		}
	}
</style>
